@model IEnumerable<FitnessClubManagement.Entities.Tools>
@{
    ViewData["Title"] = "Toolsanddescription";
}

<h1>Tools and description</h1>
<div class="row mb-2">
    @foreach (var workout in Model)
    {
        <div class="col-md-12">
            <div class="card flex-md-row mb-4 box-shadow h-auto">
                <div class="card-body d-flex flex-column align-items-start">
                    <h3 class="mb-0">
                        <a class="text-dark" href="#">@workout.Name</a>
                    </h3>
                    <div class="mb-1 text-muted"><strong>Short Description and Use : </strong>@workout.Description</div>
                </div>
            </div>
        </div>
    }
</div>

